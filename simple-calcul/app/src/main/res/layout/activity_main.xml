<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.example.codecaiine.testapplication.MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_me1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter"/>

        <TextView
            android:id="@+id/sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <EditText
            android:id="@+id/edit_me2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="enter 2"/>


        <TextView
            android:id="@+id/equal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />


    </LinearLayout>



   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="60dp">


    <Button
        android:id="@+id/click_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint=" + "
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"/>

    <Button
        android:id="@+id/click_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint=" - "
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"/>

    <Button
        android:id="@+id/click_multi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint=" x "
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"/>

       <Button
        android:id="@+id/click_divide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint=" / "
           android:layout_marginLeft="2dp"
           android:layout_marginRight="2dp"/>

   </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:paddingTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Save"/>

    </LinearLayout>

</LinearLayout>
